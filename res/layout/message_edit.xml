<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/widget39"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<!-- TODO
     Make the labels be string resources
-->
<TextView
android:id="@+id/title_text"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="@string/title_edit_label"
android:textStyle="bold"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
>
</TextView>
<EditText
android:id="@+id/title_edit"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_below="@+id/title_text"
android:layout_alignParentLeft="true"
>
</EditText>
<TextView
android:id="@+id/message_text"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="@string/message_edit_label"
android:textStyle="bold"
android:layout_below="@+id/title_edit"
android:layout_alignParentLeft="true"
>
</TextView>
<EditText
android:id="@+id/message_edit"
android:layout_width="fill_parent"
android:layout_height="134px"
android:layout_below="@+id/message_text"
android:layout_alignParentLeft="true"
>
</EditText>
<TextView
android:id="@+id/attachment_text"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="@string/attachment_add_label"
android:textStyle="bold"
android:layout_alignParentLeft="true"
android:layout_below="@+id/message_edit"
>
</TextView>

<Spinner
android:id="@+id/add_attachment_spinner"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:prompt="@string/add_attachment_prompt"
android:layout_alignParentLeft="true"
android:layout_below="@+id/attachment_text"
>
</Spinner>
<RelativeLayout
android:id="@+id/attachment_buttons_layout"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_below="@+id/add_attachment_spinner"
>
<TextView
android:id="@+id/attachment_label"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_alignParentLeft="true"
android:textStyle="bold"
android:text=""
>
</TextView>

<Button
android:id="@+id/add_attachment_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/add_attachment_button"
android:layout_alignParentLeft="true"
android:layout_below="@+id/attachment_label"
>
</Button>
<Button
android:id="@+id/remove_attachment_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/remove_attachment_button"
android:layout_toRightOf="@+id/add_attachment_button"
android:layout_below="@+id/attachment_label"
>
</Button>
</RelativeLayout>

<Button
android:id="@+id/save_message_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/save_message_button"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
>
</Button>
<Button
android:id="@+id/discard_message_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/discard_message_button"
android:layout_alignParentBottom="true"
android:layout_toRightOf="@+id/save_message_button"
>
</Button>
</RelativeLayout>
