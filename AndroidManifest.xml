<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.fluidnexus.FluidNexus"
    androidVersionCode="1"
    androidVersionName="0.1">
    <uses-sdk android:minSdkVersion="5" android:targetSdkVersion="7"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"></uses-permission>

    <application android:label="@string/app_name">
        <activity android:name=".FluidNexusAndroid" android:label="@string/app_name" android:icon="@drawable/fluid_nexus_icon">
        
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FluidNexusPreferences" android:label="@string/preferences"></activity>
        <activity android:name=".FluidNexusViewMessage"></activity>
        <activity android:name=".FluidNexusViewOutgoing"></activity>
        <activity android:name=".FluidNexusAddOutgoing"></activity>
        <activity android:name=".FluidNexusHelp"></activity>
        <activity android:name=".FluidNexusEditMessage"></activity>
        <service android:name=".FluidNexusBluetoothService">
            <intent-filter>
                <action android:name="net.fluidnexus.FluidNexus.FluidNexusBluetoothService" />
            </intent-filter>
        </service>

    </application>
    <!--        
        <service android:name=".FluidNexusClient" />
        <service android:name=".FluidNexusServer" />

        -->

</manifest> 
