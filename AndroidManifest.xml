<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.fluidnexus.FluidNexus"
    android:versionCode="1"
    android:versionName="0.2.0">
    <uses-sdk android:minSdkVersion="5" android:targetSdkVersion="7"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>
    <uses-permission android:name="net.fluidnexus.FluidNexus.permission.NETWORK_SERVICE"></uses-permission>

    <uses-feature android:name="android.hardware.bluetooth" android:required="false"/>
    <uses-feature android:name="android.hardware.wifi" android:required="false"/>

    <permission android:name="net.fluidnexus.FluidNexus.permission.NETWORK_SERVICE"
        android:protectionLevel="dangerous"
        android:label="@string/network_perm_label"
        android:description="@string/network_perm_desc" />

    <permission android:name="net.fluidnexus.FluidNexus.permission.READ_ONLY"
        android:protectionLevel="dangerous"
        android:label="@string/ro_perm_label"
        android:description="@string/ro_perm_desc" />

    <permission android:name="net.fluidnexus.FluidNexus.permission.WRITE_ONLY"
        android:protectionLevel="dangerous"
        android:label="@string/wo_perm_label"
        android:description="@string/wo_perm_desc" />

    <application android:icon="@drawable/fluid_nexus_icon" android:label="@string/app_name" android:debuggable="true">
        <activity 
            android:theme="@android:style/Theme.NoTitleBar"
            android:name=".MainActivity" 
            android:label="@string/app_name">
        
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="fluidnexus"/>
            </intent-filter>
        </activity>
        <activity android:name=".Preferences" android:label="@string/preferences"></activity>
        <activity android:name=".ViewMessage"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <!-- <activity android:name=".FluidNexusViewOutgoing"></activity> -->
        <activity android:name=".AddOutgoing"></activity>
        <activity android:name=".Help"></activity>
        <activity android:name=".EditMessage"></activity>
        <service android:name=".services.NetworkService"
            android:process=":remote"
            android:permission="net.fluidnexus.FluidNexus.permission.NETWORK_SERVICE">
            <intent-filter>
                <action android:name="net.fluidnexus.FluidNexus.services.NetworkService" />
            </intent-filter>
        </service>
        <provider
            android:authorities="net.fluidnexus.FluidNexus.provider.MessagesProvider"
            android:multiprocess="true"
            android:readPermission="net.fluidnexus.FluidNexus.permission.READ_ONLY"
            android:writePermission="net.fluidnexus.FluidNexus.permission.WRITE_ONLY"
            android:name="net.fluidnexus.FluidNexus.provider.MessagesProvider" />

    </application>
</manifest> 
